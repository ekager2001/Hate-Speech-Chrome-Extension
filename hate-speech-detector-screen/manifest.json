{
  "name": "Hate Speech Detector",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Shows a blur screen covering the content on the screen if hate speech is detected.",
  "permissions": [
    "activeTab",
    "scripting",
    "webNavigation", 
    "tabs",
    "webRequest"
  ],
  "host_permissions":[
    "<all_urls>"
  ],
  "action": {
    "default_icon": {
      "16": "whiteyeexample.png",
      "32": "whiteyeexample.png"
      }
  },
  "icons": {
    "16": "whiteyeexample.png",
    "32": "whiteyeexample.png",
    "48": "whiteyeexample.png",
    "128": "whiteyeexample.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [ "whiteyeexample.png" ],
      "matches": [ "https://*/*" ]
    }
  ]

}
